  <tool name="tool_20" displayname="Terrain Surface Texture">
    <parameters>
      <param name="DEM" displayname="Elevation" type="Required" direction="Input">
        <dialogReference>&lt;p&gt;Elevation&lt;/p&gt;&lt;p&gt;Grid (input)&lt;/p&gt;</dialogReference>
      </param>
      <param name="TEXTURE" displayname="Texture" type="Required" direction="Output">
        <dialogReference>&lt;p&gt;Texture&lt;/p&gt;&lt;p&gt;Grid (output)&lt;/p&gt;</dialogReference>
      </param>
      <param name="EPSILON" displayname="Flat Area Threshold" type="Optional" direction="Output">
        <dialogReference>&lt;p&gt;Flat Area Threshold&lt;/p&gt;&lt;p&gt;Floating point&lt;/p&gt;&lt;p&gt;Minimum: 0.000000&lt;/p&gt;&lt;p&gt;Default: 1.000000&lt;/p&gt;&lt;p&gt;maximum difference between original and median filtered elevation (3x3 moving window) that still is recognized flat&lt;/p&gt;</dialogReference>
