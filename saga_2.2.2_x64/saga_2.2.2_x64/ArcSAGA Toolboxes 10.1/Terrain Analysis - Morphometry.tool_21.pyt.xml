      <param name="TYPE" displayname="Type" type="Optional" direction="Output">
        <dialogReference>&lt;p&gt;Type&lt;/p&gt;&lt;p&gt;Choice&lt;/p&gt;&lt;p&gt;Available Choices:&lt;/p&gt;&lt;p&gt;[0] convexity&lt;/p&gt;&lt;p&gt;[1] concavity&lt;/p&gt;&lt;p&gt;Default: 0&lt;/p&gt;</dialogReference>
